<Window x:Class="ApiAccesserGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ApiAccesser" Height="600" Width="800">
    <Grid>
        <TextBlock Name="baseUriText" Margin="10,120,707,420" VerticalAlignment="Center" Height="30">Base URI:</TextBlock>
        <TextBlock Name="requestUriText" Margin="9,155,703,385" VerticalAlignment="Center" Height="30">Request URI:</TextBlock>

        <TextBlock Name="resultText" Margin="238,281,474,260" VerticalAlignment="Center" Height="29">Result:</TextBlock>
        <TextBox Name="result" Margin="238,315,10,10" IsReadOnly="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBox>

        <TextBlock Name="httpResponseText" Margin="238,91,465,455" VerticalAlignment="Center" Height="24">Http response:</TextBlock>
        <TextBox Name="httpResponse" Margin="238,120,10,294" IsReadOnly="True" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Auto"></TextBox>

        <TextBox Name="baseUriInput" Margin="90,114,559,426" Height="30"/>
        <TextBox Name="requestUriInput" Margin="89,149,559,391" Height="30"/>
        <Button Name="accessApi" Margin="19,519,702,20" Click="GoClickedAsync">GO!</Button>
    </Grid>
</Window>
